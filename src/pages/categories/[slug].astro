---
import Layout from "../../layouts/Layout.astro";
import { sampleAlternatives, sampleCategories } from "../../types/data.ts";
import { Github, Grid, List, Filter, SortAsc, ExternalLink, Star, Code } from "lucide-astro";
import alternativesData from "../../data/alternatives.json";

export async function getStaticPaths() {
  // Get all unique categories from alternatives.json
  const categories = [...new Set(alternativesData.map(alt => alt.category))];
  
  return categories.map((categorySlug) => {
    // Find alternatives for this category
    const categoryAlternatives = alternativesData.filter(alt => alt.category === categorySlug);
    
    // Create a category object with proper structure
    const category = {
      id: categorySlug,
      slug: categorySlug,
      name: categorySlug.split('-').map(word => 
        word.charAt(0).toUpperCase() + word.slice(1)
      ).join(' '),
      description: `Open source alternatives in the ${categorySlug.split('-').map(word => 
        word.charAt(0).toUpperCase() + word.slice(1)
      ).join(' ')} category`
    };
    
    return {
      params: { slug: categorySlug },
      props: {
        category,
        alternatives: categoryAlternatives,
      },
    };
  });
}

const { category, alternatives } = Astro.props;
---

<Layout title={`${category.name} - Open Source Alternatives`} description={category.description}>
<div class="bg-white dark:bg-gray-800 transition-colors duration-300"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Category Header -->
    <div class="mb-8">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center">
          <span class="text-primary-600 dark:text-primary-400 text-xl font-bold">
            {category.name.charAt(0)}
          </span>
        </div>
        <div class="ml-4">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{category.name}</h1>
          <p class="text-gray-600 dark:text-gray-300">{category.description}</p>
        </div>
      </div>
    </div>

    <!-- Filters and Controls -->
    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6 mb-8">
      <div class="flex flex-col lg:flex-row gap-4 items-center justify-between">
        <!-- View Toggle -->
        <div class="flex items-center space-x-2">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300">View:</span>
          <div class="flex bg-white dark:bg-gray-600 rounded-lg border border-gray-300 dark:border-gray-500">
            <button class="p-2 text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900 rounded-l-lg">
              <Grid class="h-4 w-4" />
            </button>
            <button class="p-2 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300">
              <List class="h-4 w-4" />
            </button>
          </div>
        </div>

        <!-- Filters -->
        <div class="flex flex-wrap gap-2">
          <!-- License Filter -->
          <div class="relative">
            <button
              id="license-btn"
              class="inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-primary-500 transition-colors"
            >
              <Filter class="h-4 w-4 mr-2" />
              License
            </button>
            <div
              id="license-dropdown"
              class="absolute right-0 mt-2 w-48 bg-white dark:bg-gray-700 rounded-md shadow-lg z-10 border border-gray-200 dark:border-gray-600 transition-colors hidden"
            >
              <div class="py-1">
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
                  <input type="checkbox" class="mr-3" />
                  MIT
                </label>
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
                  <input type="checkbox" class="mr-3" />
                  GPL
                </label>
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
                  <input type="checkbox" class="mr-3" />
                  Apache 2.0
                </label>
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
                  <input type="checkbox" class="mr-3" />
                  BSD
                </label>
              </div>
            </div>
          </div>

          <!-- Platform Filter -->
          <div class="relative">
            <button
              id="platform-btn"
              class="inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-primary-500 transition-colors"
            >
              <Filter class="h-4 w-4 mr-2" />
              Platform

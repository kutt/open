---
import Layout from "../../layouts/Layout.astro";
import { sampleAlternatives, sampleCategories } from "../../types/data.ts";

export async function getStaticPaths() {
  return sampleCategories.map((category) => ({
    params: { slug: category.slug },
    props: {
      category,
      alternatives: sampleAlternatives.filter((alt) => alt.categoryId === category.id),
    },
  }));
}

const { category, alternatives } = Astro.props;
---

<Layout title={`${category.name} - Open Source Alternatives`} description={category.description}>
<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Category Header -->
    <div class="mb-8">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
          <span class="text-primary-600 text-xl font-bold">
            {category.name.charAt(0)}
          </span>
        </div>
        <div class="ml-4">
          <h1 class="text-3xl font-bold text-gray-900">{category.name}</h1>
          <p class="text-gray-600">{category.description}</p>
        </div>
      </div>
    </div>

    <!-- Filters and Controls -->
    <div class="bg-gray-50 rounded-lg p-6 mb-8">
      <div class="flex flex-col lg:flex-row gap-4 items-center justify-between">
        <!-- View Toggle -->
        <div class="flex items-center space-x-2">
          <span class="text-sm font-medium text-gray-700">View:</span>
          <div class="flex bg-white rounded-lg border border-gray-300">
            <button class="p-2 text-primary-600 bg-primary-50 rounded-l-lg">
              <Grid class="h-4 w-4" />
            </button>
            <button class="p-2 text-gray-400 hover:text-gray-600">
              <List class="h-4 w-4" />
            </button>
          </div>
        </div>

        <!-- Filters -->
        <div class="flex flex-wrap gap-2">
          <!-- License Filter -->
          <div class="relative" x-data="{ open: false }">
            <button
              @click="open = !open"
              class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
            >
              <Filter class="h-4 w-4 mr-2" />
              License
            </button>
            <div
              x-show="open"
              @click.away="open = false"
              class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10 border border-gray-200"
              x-transition
            >
              <div class="py-1">
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <input type="checkbox" class="mr-3" />
                  MIT
                </label>
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <input type="checkbox" class="mr-3" />
                  GPL
                </label>
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <input type="checkbox" class="mr-3" />
                  Apache 2.0
                </label>
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <input type="checkbox" class="mr-3" />
                  BSD
                </label>
              </div>
            </div>
          </div>

          <!-- Platform Filter -->
          <div class="relative" x-data="{ open: false }">
            <button
              @click="open = !open"
              class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
            >
              <Filter class="h-4 w-4 mr-2" />
              Platform
            </button>
            <div
              x-show="open"
              @click.away="open = false"
              class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10 border border-gray-200"
              x-transition
            >
              <div class="py-1">
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <input type="checkbox" class="mr-3" />
                  Windows
                </label>
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <input type="checkbox" class="mr-3" />
                  macOS
                </label>
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <input type="checkbox" class="mr-3" />
                  Linux
                </label>
                <label class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <input type="checkbox" class="mr-3" />
                  Web
                </label>
              </div>
            </div>
          </div>

          <!-- Sort -->
          <div class="relative" x-data="{ open: false }">
            <button
              @click="open = !open"
              class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
            >
              <SortAsc class="h-4 w-4 mr-2" />
              Sort
            </button>
            <div
              x-show="open"
              @click.away="open = false"
              class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10 border border-gray-200"
              x-transition
            >
              <div class="py-1">
                <a href="?sort=popularity" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  Most Popular
                </a>
                <a href="?sort=rating" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  Highest Rated
                </a>
                <a href="?sort=newest" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  Newest
                </a>
                <a href="?sort=name" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  Alphabetical
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Results Count -->
        <div class="text-sm text-gray-600">
          {alternatives.length} alternatives found
        </div>
      </div>
    </div>

    <!-- Alternatives Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {alternatives.map((alternative) => (
        <div class="bg-white rounded-xl border border-gray-200 hover:border-primary-300 hover:shadow-lg transition-all duration-300 overflow-hidden">
          <!-- Header -->
          <div class="p-6">
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center">
                <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
                  <span class="text-gray-600 text-lg font-bold">
                    {alternative.name.charAt(0)}
                  </span>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900">
                    {alternative.name}
                  </h3>
                  <p class="text-sm text-gray-500">
                    {alternative.license}
                  </p>
                </div>
              </div>
              <div class="flex items-center text-yellow-500">
                <Star class="h-4 w-4 fill-current" />
                <span class="ml-1 text-sm font-medium text-gray-700">
                  {alternative.rating}
                </span>
              </div>
            </div>

            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
              {alternative.description}
            </p>

            <!-- Platforms -->
            <div class="flex flex-wrap gap-2 mb-4">
              {alternative.platforms.slice(0, 3).map((platform) => (
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  {platform.name}
                </span>
              ))}
              {alternative.platforms.length > 3 && (
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  +{alternative.platforms.length - 3} more
                </span>
              )}
            </div>

            <!-- Stats -->
            <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
              <div class="flex items-center">
                <Github class="h-4 w-4 mr-1" />
                {alternative.stars?.toLocaleString()} stars
              </div>
              <div>
                {alternative.reviewCount} reviews
              </div>
            </div>

            <!-- Actions -->
            <div class="flex items-center justify-between">
              <div class="flex space-x-2">
                <a 
                  href={alternative.website}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-3 py-2 text-sm font-medium text-primary-600 hover:text-primary-700"
                >
                  <ExternalLink class="h-4 w-4 mr-1" />
                  Website
                </a>
                {alternative.repository && (
                  <a 
                    href={alternative.repository}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-700"
                  >
                    <Github class="h-4 w-4 mr-1" />
                    Source
                  </a>
                )}
              </div>
              <a 
                href={`/alternatives/${alternative.id}`}
                class="text-primary-600 hover:text-primary-700 font-medium text-sm"
              >
                Learn more ‚Üí
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- No Results -->
    {alternatives.length === 0 && (
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <span class="text-gray-400 text-2xl">üîç</span>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No alternatives found</h3>
        <p class="text-gray-600 mb-6">Try adjusting your filters or search terms</p>
        <a 
          href="/submit"
          class="inline-flex items-center px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors"
        >
          Submit an Alternative
        </a>
      </div>
    )}
  </div>
</div>
</Layout>

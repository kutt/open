---
import Layout from "../../layouts/Layout.astro";
import { sampleCategories } from "../../types/data.ts";

export async function getStaticPaths() {
  return sampleCategories.map((category) => ({
    params: { slug: category.slug },
    props: { category },
  }));
}

const { category } = Astro.props;
---

<Layout title="Categories - Open Source Alternatives" description="Browse open source alternatives by category. Find the perfect solution for your needs.">
<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-8" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li>
          <a href="/" class="text-gray-500 hover:text-gray-700">Home</a>
        </li>
        <li>
          <span class="text-gray-400">/</span>
        </li>
        <li>
          <a href="/categories" class="text-gray-500 hover:text-gray-700">Categories</a>
        </li>
        <li>
          <span class="text-gray-400">/</span>
        </li>
        <li>
          <span class="text-gray-900 font-medium">{category?.name}</span>
        </li>
      </ol>
    </nav>

    <!-- Category Header -->
    <div class="text-center mb-12">
      <div class="w-20 h-20 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
        <span class="text-primary-600 text-3xl font-bold">
          {category?.name.charAt(0)}
        </span>
      </div>
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{category?.name}</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        {category?.description}
      </p>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      <div class="bg-gray-50 rounded-lg p-6 text-center">
        <div class="text-2xl font-bold text-primary-600 mb-2">25+</div>
        <div class="text-gray-600">Open Source Alternatives</div>
      </div>
      <div class="bg-gray-50 rounded-lg p-6 text-center">
        <div class="text-2xl font-bold text-primary-600 mb-2">4.2</div>
        <div class="text-gray-600">Average Rating</div>
      </div>
      <div class="bg-gray-50 rounded-lg p-6 text-center">
        <div class="text-2xl font-bold text-primary-600 mb-2">1.2K</div>
        <div class="text-gray-600">Community Reviews</div>
      </div>
    </div>

    <!-- Featured Alternatives -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Featured Alternatives</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- This would be populated with actual alternatives for this category -->
        <div class="bg-white border border-gray-200 rounded-lg p-6 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
              <span class="text-gray-600 text-lg font-bold">L</span>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">LibreOffice</h3>
              <p class="text-sm text-gray-500">MPL-2.0</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm mb-4">
            Free and open source office suite with Writer, Calc, Impress, and more.
          </p>
          <div class="flex items-center justify-between">
            <div class="flex items-center text-yellow-500">
              <span class="text-sm font-medium text-gray-700">4.2</span>
            </div>
            <a href="/alternatives/libreoffice" class="text-primary-600 hover:text-primary-700 font-medium text-sm">
              Learn more →
            </a>
          </div>
        </div>

        <div class="bg-white border border-gray-200 rounded-lg p-6 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
              <span class="text-gray-600 text-lg font-bold">O</span>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">OnlyOffice</h3>
              <p class="text-sm text-gray-500">AGPL-3.0</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm mb-4">
            Feature-rich office suite with excellent Microsoft Office compatibility.
          </p>
          <div class="flex items-center justify-between">
            <div class="flex items-center text-yellow-500">
              <span class="text-sm font-medium text-gray-700">4.0</span>
            </div>
            <a href="/alternatives/onlyoffice" class="text-primary-600 hover:text-primary-700 font-medium text-sm">
              Learn more →
            </a>
          </div>
        </div>

        <div class="bg-white border border-gray-200 rounded-lg p-6 hover:border-primary-300 hover:shadow-lg transition-all duration-300">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
              <span class="text-gray-600 text-lg font-bold">A</span>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">Apache OpenOffice</h3>
              <p class="text-sm text-gray-500">Apache-2.0</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm mb-4">
            Long-established open source office suite with broad compatibility.
          </p>
          <div class="flex items-center justify-between">
            <div class="flex items-center text-yellow-500">
              <span class="text-sm font-medium text-gray-700">3.8</span>
            </div>
            <a href="/alternatives/openoffice" class="text-primary-600 hover:text-primary-700 font-medium text-sm">
              Learn more →
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- View All Button -->
    <div class="text-center">
      <a 
        href={`/categories/${category?.slug}`}
        class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
      >
        View All {category?.name} Alternatives
      </a>
    </div>
  </div>
</div>
</Layout>

---
import Layout from "../../layouts/Layout.astro";
import { Code, Database, Monitor, GitBranch, Server, Mail, Container, Zap, Video, Palette, Music, FileText, Camera, FileMusic, MessageCircle, FileText as PdfReader, Edit, Globe, Webcam, BookOpen, Wrench, Cloud, Box, Users, BarChart3, Shield, Bot, Network, Calendar, TrendingUp, Search, Brain, Gamepad2, Lock, BarChart, Workflow, Key, Cpu } from "lucide-astro";
import alternativesData from "../../data/alternatives.json";

// Process the alternatives data to find all categories
const categoryCounts = alternativesData.reduce((acc, alternative) => {
  const category = alternative.category;
  if (!acc[category]) {
    acc[category] = {
      id: category,
      name: category.split('-').map(word => 
        word.charAt(0).toUpperCase() + word.slice(1)
      ).join(' '),
      slug: category,
      count: 0,
      description: getCategoryDescription(category)
    };
  }
  acc[category].count++;
  return acc;
}, {} as Record<string, any>);

// Get all categories sorted by count
const allCategories = Object.values(categoryCounts)
  .sort((a: any, b: any) => b.count - a.count);


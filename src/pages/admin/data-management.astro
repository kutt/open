---
---

<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Data Management</h1>
        <p class="text-gray-600">Manage alternatives, categories, and user submissions</p>
      </div>
      <button class="inline-flex items-center px-4 py-2 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
        <Plus class="h-5 w-5 mr-2" />
        Add Alternative
      </button>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="text-2xl font-bold text-primary-600 mb-2">500+</div>
        <div class="text-gray-600">Total Alternatives</div>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="text-2xl font-bold text-primary-600 mb-2">50+</div>
        <div class="text-gray-600">Categories</div>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="text-2xl font-bold text-primary-600 mb-2">25</div>
        <div class="text-gray-600">Pending Reviews</div>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="text-2xl font-bold text-primary-600 mb-2">12</div>
        <div class="text-gray-600">User Submissions</div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="border-b border-gray-200 mb-8">
      <nav class="-mb-px flex space-x-8">
        <button class="border-primary-500 text-primary-600 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
          Alternatives
        </button>
        <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
          Categories
        </button>
        <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
          User Submissions
        </button>
        <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
          Reviews
        </button>
      </nav>
    </div>

    <!-- Alternatives Table -->
    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Alternatives</h2>
          <div class="flex items-center space-x-4">
            <input
              type="text"
              placeholder="Search alternatives..."
              class="px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
            />
            <select class="px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              <option>All Categories</option>
              <option>Office Suites</option>
              <option>Media Players</option>
              <option>Graphic Design</option>
            </select>
          </div>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Alternative
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Category
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                License
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Rating
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
                    <span class="text-gray-600 font-bold">L</span>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">LibreOffice</div>
                    <div class="text-sm text-gray-500">libreoffice.org</div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                Office Suites
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                MPL-2.0
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <span class="text-yellow-500">★★★★☆</span>
                  <span class="ml-2 text-sm text-gray-600">4.2</span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Published
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end space-x-2">
                  <button class="text-primary-600 hover:text-primary-900">
                    <Edit class="h-4 w-4" />
                  </button>
                  <button class="text-red-600 hover:text-red-900">
                    <Trash2 class="h-4 w-4" />
                  </button>
                </div>
              </td>
            </tr>
            
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
                    <span class="text-gray-600 font-bold">A</span>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">Audacious</div>
                    <div class="text-sm text-gray-500">audacious-media-player.org</div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                Media Players
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                BSD-2-Clause
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <span class="text-yellow-500">★★★★☆</span>
                  <span class="ml-2 text-sm text-gray-600">4.0</span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Published
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end space-x-2">
                  <button class="text-primary-600 hover:text-primary-900">
                    <Edit class="h-4 w-4" />
                  </button>
                  <button class="text-red-600 hover:text-red-900">
                    <Trash2 class="h-4 w-4" />
                  </button>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Add Alternative Modal (Hidden by default) -->
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden" id="addModal">
      <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-1/2 shadow-lg rounded-md bg-white">
        <div class="mt-3">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-900">Add New Alternative</h3>
            <button class="text-gray-400 hover:text-gray-600">
              <X class="h-6 w-6" />
            </button>
          </div>
          
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
                <input
                  type="text"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                  placeholder="Alternative name"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                  <option>Office Suites</option>
                  <option>Media Players</option>
                  <option>Graphic Design</option>
                  <option>Development Tools</option>
                  <option>Communication</option>
                </select>
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
              <textarea
                rows="3"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                placeholder="Brief description of the alternative"
              ></textarea>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Website</label>
                <div class="relative">
                  <input
                    type="url"
                    class="w-full px-3 py-2 pl-10 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                    placeholder="https://example.com"
                  />
                  <Link class="absolute left-3 top-2.5 h-5 w-5 text-gray-400" />
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Repository</label>
                <div class="relative">
                  <input
                    type="url"
                    class="w-full px-3 py-2 pl-10 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                    placeholder="https://github.com/user/repo"
                  />
                  <Github class="absolute left-3 top-2.5 h-5 w-5 text-gray-400" />
                </div>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">License</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                  <option>MIT</option>
                  <option>GPL-3.0</option>
                  <option>Apache-2.0</option>
                  <option>BSD-3-Clause</option>
                  <option>MPL-2.0</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Proprietary Alternative</label>
                <input
                  type="text"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                  placeholder="Software this replaces"
                />
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Platforms</label>
              <div class="flex flex-wrap gap-2">
                <label class="flex items-center">
                  <input type="checkbox" class="mr-2" />
                  Windows
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="mr-2" />
                  macOS
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="mr-2" />
                  Linux
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="mr-2" />
                  Web
                </label>
              </div>
            </div>
            
            <div class="flex justify-end space-x-3">
              <button
                type="button"
                class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50"
              >
                Cancel
              </button>
              <button
                type="submit"
                class="inline-flex items-center px-4 py-2 bg-primary-600 text-white font-medium rounded-md hover:bg-primary-700"
              >
                <Save class="h-4 w-4 mr-2" />
                Save Alternative
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

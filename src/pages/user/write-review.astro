---
import Layout from "../../layouts/Layout.astro";
import { Star, Trash2 } from "lucide-astro";
---

<Layout title="Write a Review - Open Alternatives" description="Share your experience with open source alternatives and help the community.">
<div class="bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Write a Review</h1>
      <p class="text-gray-600">Share your experience with the community</p>
    </div>

    <!-- Alternative Info -->
    <div class="bg-gray-50 rounded-lg p-6 mb-8">
      <div class="flex items-center">
        <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center">
          <span class="text-gray-600 text-2xl font-bold">L</span>
        </div>
        <div class="ml-6">
          <h2 class="text-2xl font-bold text-gray-900">LibreOffice</h2>
          <p class="text-gray-600">Free and open source office suite</p>
          <div class="flex items-center mt-2">
            <div class="flex items-center text-yellow-500">
              <Star class="h-4 w-4 fill-current" />
              <Star class="h-4 w-4 fill-current" />
              <Star class="h-4 w-4 fill-current" />
              <Star class="h-4 w-4 fill-current" />
              <Star class="h-4 w-4" />
            </div>
            <span class="ml-2 text-sm text-gray-600">4.2 (1,250 reviews)</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Review Form -->
    <form class="space-y-8">
      <!-- Rating -->
      <div>
        <label class="block text-lg font-medium text-gray-900 mb-4">Overall Rating</label>
        <div class="flex items-center space-x-2" x-data="{ rating: 0 }">
          {[1, 2, 3, 4, 5].map((star) => (
            <button
              type="button"
              class="text-gray-300 hover:text-yellow-500 transition-colors"
              @click="rating = {star}"
              :class="{ 'text-yellow-500': rating >= {star} }"
            >
              <Star class="h-8 w-8 fill-current" />
            </button>
          ))}
          <span class="ml-4 text-sm text-gray-600" x-text="rating > 0 ? `${rating} star${rating > 1 ? 's' : ''}` : 'Select rating'"></span>
        </div>
      </div>

      <!-- Review Title -->
      <div>
        <label class="block text-lg font-medium text-gray-900 mb-2">Review Title</label>
        <input
          type="text"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
          placeholder="Summarize your experience in a few words"
        />
      </div>

      <!-- Review Content -->
      <div>
        <label class="block text-lg font-medium text-gray-900 mb-2">Your Review</label>
        <textarea
          rows="6"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
          placeholder="Tell others about your experience with this alternative. What did you like? What could be improved? How does it compare to the proprietary version?"
        ></textarea>
        <p class="mt-2 text-sm text-gray-500">Minimum 50 characters</p>
      </div>

      <!-- Pros and Cons -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <label class="block text-lg font-medium text-gray-900 mb-2">Pros</label>
          <div class="space-y-2" x-data="{ pros: [] }">
            <div class="flex space-x-2">
              <input
                type="text"
                class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                placeholder="Add a pro"
                @keyup.enter="pros.push($event.target.value); $event.target.value = ''"
              />
              <button
                type="button"
                class="px-3 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700"
                @click="pros.push($refs.proInput.value); $refs.proInput.value = ''"
                x-ref="proInput"
              >
                Add
              </button>
            </div>
            <div class="space-y-1">
              <template x-for="(pro, index) in pros" :key="index">
                <div class="flex items-center justify-between bg-green-50 px-3 py-2 rounded-md">
                  <span class="text-sm text-green-800" x-text="pro"></span>
                  <button
                    type="button"
                    class="text-green-600 hover:text-green-800"
                    @click="pros.splice(index, 1)"
                  >
                    <Trash2 class="h-4 w-4" />
                  </button>
                </div>
              </template>
            </div>
          </div>
        </div>

        <div>
          <label class="block text-lg font-medium text-gray-900 mb-2">Cons</label>
          <div class="space-y-2" x-data="{ cons: [] }">
            <div class="flex space-x-2">
              <input
                type="text"
                class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                placeholder="Add a con"
                @keyup.enter="cons.push($event.target.value); $event.target.value = ''"
              />
              <button
                type="button"
                class="px-3 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700"
                @click="cons.push($refs.conInput.value); $refs.conInput.value = ''"
                x-ref="conInput"
              >
                Add
              </button>
            </div>
            <div class="space-y-1">
              <template x-for="(con, index) in cons" :key="index">
                <div class="flex items-center justify-between bg-red-50 px-3 py-2 rounded-md">
                  <span class="text-sm text-red-800" x-text="con"></span>
                  <button
                    type="button"
                    class="text-red-600 hover:text-red-800"
                    @click="cons.splice(index, 1)"
                  >
                    <Trash2 class="h-4 w-4" />
                  </button>
                </div>
              </template>
            </div>
          </div>
        </div>
      </div>

      <!-- Usage Context -->
      <div>
        <label class="block text-lg font-medium text-gray-900 mb-2">How do you use this software?</label>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <label class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="radio" name="usage" value="personal" class="mr-3" />
            <div>
              <div class="font-medium text-gray-900">Personal Use</div>
              <div class="text-sm text-gray-600">For personal projects and daily tasks</div>
            </div>
          </label>
          <label class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="radio" name="usage" value="professional" class="mr-3" />
            <div>
              <div class="font-medium text-gray-900">Professional Use</div>
              <div class="text-sm text-gray-600">For work and business purposes</div>
            </div>
          </label>
          <label class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="radio" name="usage" value="educational" class="mr-3" />
            <div>
              <div class="font-medium text-gray-900">Educational</div>
              <div class="text-sm text-gray-600">For learning and teaching</div>
            </div>
          </label>
          <label class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="radio" name="usage" value="development" class="mr-3" />
            <div>
              <div class="font-medium text-gray-900">Development</div>
              <div class="text-sm text-gray-600">For software development</div>
            </div>
          </label>
        </div>
      </div>

      <!-- Experience Level -->
      <div>
        <label class="block text-lg font-medium text-gray-900 mb-2">Your Experience Level</label>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <label class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="radio" name="experience" value="beginner" class="mr-3" />
            <div>
              <div class="font-medium text-gray-900">Beginner</div>
              <div class="text-sm text-gray-600">Just getting started</div>
            </div>
          </label>
          <label class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="radio" name="experience" value="intermediate" class="mr-3" />
            <div>
              <div class="font-medium text-gray-900">Intermediate</div>
              <div class="text-sm text-gray-600">Some experience</div>
            </div>
          </label>
          <label class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="radio" name="experience" value="expert" class="mr-3" />
            <div>
              <div class="font-medium text-gray-900">Expert</div>
              <div class="text-sm text-gray-600">Very experienced</div>
            </div>
          </label>
        </div>
      </div>

      <!-- Submit Buttons -->
      <div class="flex justify-between pt-6 border-t border-gray-200">
        <button
          type="button"
          class="px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50"
        >
          Save as Draft
        </button>
        <button
          type="submit"
          class="px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700"
        >
          Submit Review
        </button>
      </div>
    </form>

    <!-- Review Guidelines -->
    <div class="mt-12 bg-blue-50 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-blue-900 mb-4">Review Guidelines</h3>
      <ul class="space-y-2 text-sm text-blue-800">
        <li class="flex items-start">
          <span class="mr-2">•</span>
          <span>Be honest and constructive in your feedback</span>
        </li>
        <li class="flex items-start">
          <span class="mr-2">•</span>
          <span>Focus on your actual experience with the software</span>
        </li>
        <li class="flex items-start">
          <span class="mr-2">•</span>
          <span>Compare it fairly to proprietary alternatives</span>
        </li>
        <li class="flex items-start">
          <span class="mr-2">•</span>
          <span>Avoid personal attacks or inappropriate language</span>
        </li>
        <li class="flex items-start">
          <span class="mr-2">•</span>
          <span>Include specific examples of features you used</span>
        </li>
      </ul>
    </div>
  </div>
</div>
</Layout>

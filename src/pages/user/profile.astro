---
import Layout from "../../layouts/Layout.astro";
import { User } from "lucide-astro";
---

<Layout title="User Profile - Open Alternatives" description="Manage your profile and preferences on Open Alternatives.">
<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- User Profile Header -->
    <div class="bg-gradient-to-r from-primary-50 to-primary-100 rounded-lg p-8 mb-8">
      <div class="flex items-center">
        <div class="w-20 h-20 bg-primary-600 rounded-full flex items-center justify-center">
          <User class="h-10 w-10 text-white" />
        </div>
        <div class="ml-6">
          <h1 class="text-3xl font-bold text-gray-900">John Doe</h1>
          <p class="text-gray-600">john.doe@example.com</p>
          <div class="flex items-center mt-2 space-x-4">
            <span class="text-sm text-gray-500">Member since January 2024</span>
            <span class="px-2 py-1 bg-primary-100 text-primary-800 text-xs font-medium rounded-full">
              Verified User
            </span>
          </div>
        </div>
        <div class="ml-auto">
          <button class="inline-flex items-center px-4 py-2 bg-white text-gray-700 font-medium rounded-lg border border-gray-300 hover:bg-gray-50">
            <Settings class="h-4 w-4 mr-2" />
            Settings
          </button>
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="flex items-center">
          <Heart class="h-8 w-8 text-red-500" />
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900">24</div>
            <div class="text-gray-600">Bookmarks</div>
          </div>
        </div>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="flex items-center">
          <MessageCircle class="h-8 w-8 text-blue-500" />
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900">12</div>
            <div class="text-gray-600">Reviews</div>
          </div>
        </div>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="flex items-center">
          <Plus class="h-8 w-8 text-green-500" />
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900">3</div>
            <div class="text-gray-600">Submissions</div>
          </div>
        </div>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="flex items-center">
          <Star class="h-8 w-8 text-yellow-500" />
          <div class="ml-4">
            <div class="text-2xl font-bold text-gray-900">156</div>
            <div class="text-gray-600">Helpful Votes</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="border-b border-gray-200 mb-8">
      <nav class="-mb-px flex space-x-8">
        <button class="border-primary-500 text-primary-600 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
          Bookmarks
        </button>
        <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
          Reviews
        </button>
        <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
          Submissions
        </button>
        <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm">
          Activity
        </button>
      </nav>
    </div>

    <!-- Bookmarks -->
    <div class="space-y-6">
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
              <span class="text-gray-600 text-lg font-bold">L</span>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">LibreOffice</h3>
              <p class="text-sm text-gray-500">Office Suites • MPL-2.0</p>
            </div>
          </div>
          <div class="flex items-center space-x-2">
            <div class="flex items-center text-yellow-500">
              <Star class="h-4 w-4 fill-current" />
              <span class="ml-1 text-sm font-medium text-gray-700">4.2</span>
            </div>
            <button class="text-red-500 hover:text-red-700">
              <Heart class="h-5 w-5 fill-current" />
            </button>
          </div>
        </div>
        <p class="text-gray-600 text-sm mb-4">
          Free and open source office suite with Writer, Calc, Impress, and more.
        </p>
        <div class="flex items-center justify-between">
          <div class="flex items-center text-sm text-gray-500">
            <span>Bookmarked 2 days ago</span>
          </div>
          <a href="/alternatives/libreoffice" class="text-primary-600 hover:text-primary-700 font-medium text-sm">
            View Details →
          </a>
        </div>
      </div>

      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
              <span class="text-gray-600 text-lg font-bold">A</span>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-semibold text-gray-900">Audacious</h3>
              <p class="text-sm text-gray-500">Media Players • BSD-2-Clause</p>
            </div>
          </div>
          <div class="flex items-center space-x-2">
            <div class="flex items-center text-yellow-500">
              <Star class="h-4 w-4 fill-current" />
              <span class="ml-1 text-sm font-medium text-gray-700">4.0</span>
            </div>
            <button class="text-red-500 hover:text-red-700">
              <Heart class="h-5 w-5 fill-current" />
            </button>
          </div>
        </div>
        <p class="text-gray-600 text-sm mb-4">
          Lightweight audio player with extensive format support.
        </p>
        <div class="flex items-center justify-between">
          <div class="flex items-center text-sm text-gray-500">
            <span>Bookmarked 1 week ago</span>
          </div>
          <a href="/alternatives/audacious" class="text-primary-600 hover:text-primary-700 font-medium text-sm">
            View Details →
          </a>
        </div>
      </div>
    </div>

    <!-- Submit Alternative Form -->
    <div class="mt-12 bg-gray-50 rounded-lg p-8">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Submit an Alternative</h2>
        <p class="text-gray-600">Help the community by submitting a new open source alternative</p>
      </div>

      <form class="max-w-2xl mx-auto space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Alternative Name</label>
            <input
              type="text"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              placeholder="e.g., GIMP"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Proprietary Alternative</label>
            <input
              type="text"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              placeholder="e.g., Adobe Photoshop"
            />
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
          <textarea
            rows="4"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
            placeholder="Describe the alternative and its key features..."
          ></textarea>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Website</label>
            <input
              type="url"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              placeholder="https://example.com"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Repository</label>
            <input
              type="url"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              placeholder="https://github.com/user/repo"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
            <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              <option>Select Category</option>
              <option>Office Suites</option>
              <option>Media Players</option>
              <option>Graphic Design</option>
              <option>Development Tools</option>
              <option>Communication</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">License</label>
            <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
              <option>Select License</option>
              <option>MIT</option>
              <option>GPL-3.0</option>
              <option>Apache-2.0</option>
              <option>BSD-3-Clause</option>
              <option>MPL-2.0</option>
            </select>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Platforms</label>
          <div class="flex flex-wrap gap-4">
            <label class="flex items-center">
              <input type="checkbox" class="mr-2" />
              Windows
            </label>
            <label class="flex items-center">
              <input type="checkbox" class="mr-2" />
              macOS
            </label>
            <label class="flex items-center">
              <input type="checkbox" class="mr-2" />
              Linux
            </label>
            <label class="flex items-center">
              <input type="checkbox" class="mr-2" />
              Web
            </label>
          </div>
        </div>

        <div class="flex justify-end">
          <button
            type="submit"
            class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
          >
            <Plus class="h-5 w-5 mr-2" />
            Submit Alternative
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
</Layout>
